<Window x:Class="WpfApp5.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="BookWindow" Height="400" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185*"/>
            <ColumnDefinition Width="316*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Название" HorizontalAlignment="Left" Margin="68,35,0,0" VerticalAlignment="Top"/>
        <Label Content="Автор" HorizontalAlignment="Left" Margin="68,72,0,0" VerticalAlignment="Top" Width="62"/>
        <Label Content="Жанр" HorizontalAlignment="Left" Margin="68,124,0,0" VerticalAlignment="Top"/>
        <Label Content="Год публикации" HorizontalAlignment="Left" Margin="68,174,0,0" VerticalAlignment="Top"/>
        <Label Content="Международный стандартный &#xD;&#xA;книжный номер" HorizontalAlignment="Left" Margin="68,220,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label Content="Количество на складе" HorizontalAlignment="Left" Margin="68,272,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button Click ="NextButton_Click" Content="Добавить" HorizontalAlignment="Left" Margin="24,323,0,0" VerticalAlignment="Top" Height="40" Width="110" Grid.Column="1"/>

        <TextBox x:Name="NameBbox" HorizontalAlignment="Left" Margin="80,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="Authorbox" HorizontalAlignment="Left" Margin="80,72,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="Genrebox" HorizontalAlignment="Left" Margin="80,124,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="Publishbox" HorizontalAlignment="Left" Margin="80,178,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="ISBNbox" HorizontalAlignment="Left" Margin="80,232,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.23,0.57" Grid.Column="1"/>
        <TextBox x:Name="Quantitybox" HorizontalAlignment="Left" Margin="80,276,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>

    </Grid>
</Window>
